// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int            @id @default(autoincrement())
  email              String         @unique
  password           String
  name               String
  lastName           String         @default("")
  avatar             String?
  bio                String?        @default("")
  gender             String?        @default("Hombre")
  age                Int?
  relationshipStatus String?        @default("Soltero")
  location           String?        @default("")
  occupation         String?        @default("")
  privacy            String?        @default("public") // public, friends, private
  invitationsCount   Int            @default(2)
  resetPasswordToken String?
  resetPasswordExpires DateTime?
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt

  // Relations
  invitationsCreated Invitation[]   @relation("InvitationCreator")
  usedInvitation     Invitation?    @relation("InvitationUser")

  posts              Post[]
  comments           Comment[]
  photos             Photo[]
  
  // Friendships
  friendships        Friendship[]   @relation("UserFriendships")
  friendOf           Friendship[]   @relation("FriendOfUser")
  
  // Messages
  sentMessages       Message[]      @relation("SentMessages")
  receivedMessages   Message[]      @relation("ReceivedMessages")
  
  // Notifications
  notifications      Notification[]
  
  // Profile visits
  visitsReceived     Visit[]        @relation("TargetUser")
  visitsMade         Visit[]        @relation("Visitor")

  // Events
  createdEvents      Event[]         @relation("CreatedEvents")
  attendingEvents    EventAttendee[]

  // Pages
  pagesCreated       Page[]          @relation("PageCreator")
  pagesFollowing     PageFollower[]

  // Real Tagging
  photoTags          PhotoTag[]

  // Social
  likes              Like[]

  @@map("users")
}

model Invitation {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  inviterId Int
  used      Boolean  @default(false)
  usedById  Int?     @unique
  createdAt DateTime @default(now())

  inviter   User     @relation("InvitationCreator", fields: [inviterId], references: [id])
  usedBy    User?    @relation("InvitationUser", fields: [usedById], references: [id])

  @@map("invitations")
}

model Visit {
  id            Int       @id @default(autoincrement())
  visitorId     Int
  targetId      Int
  createdAt     DateTime  @default(now())

  visitor       User      @relation("Visitor", fields: [visitorId], references: [id], onDelete: Cascade)
  target        User      @relation("TargetUser", fields: [targetId], references: [id], onDelete: Cascade)

  @@map("visits")
  @@index([targetId])
  @@index([visitorId])
}

model Event {
  id            Int       @id @default(autoincrement())
  creatorId     Int
  title         String
  description   String?
  location      String?
  date          DateTime
  image         String?
  createdAt     DateTime  @default(now())

  creator       User      @relation("CreatedEvents", fields: [creatorId], references: [id], onDelete: Cascade)
  attendees     EventAttendee[]

  @@map("events")
}

model EventAttendee {
  id            Int       @id @default(autoincrement())
  eventId       Int
  userId        Int
  status        String    @default("interested") // going, interested, invited
  createdAt     DateTime  @default(now())

  event         Event     @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
  @@map("event_attendees")
}

model Post {
  id            Int       @id @default(autoincrement())
  userId        Int
  content       String
  type          String    @default("status") // status, photo, video
  image         String?
  videoUrl      String?   // For YouTube links
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  comments      Comment[]
  likes         Like[]

  @@map("posts")
  @@index([userId])
  @@index([createdAt])
}

model Comment {
  id            Int       @id @default(autoincrement())
  postId        Int?
  photoId       Int?
  userId        Int
  content       String
  createdAt     DateTime  @default(now())

  // Relations
  post          Post?     @relation(fields: [postId], references: [id], onDelete: Cascade)
  photo         Photo?    @relation(fields: [photoId], references: [id], onDelete: Cascade)
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  likes         Like[]

  @@map("comments")
  @@index([postId])
  @@index([photoId])
  @@index([userId])
}

model Friendship {
  id            Int       @id @default(autoincrement())
  userId        Int
  friendId      Int
  status        String    @default("pending") // pending, accepted, rejected
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  user          User      @relation("UserFriendships", fields: [userId], references: [id], onDelete: Cascade)
  friend        User      @relation("FriendOfUser", fields: [friendId], references: [id], onDelete: Cascade)

  @@unique([userId, friendId])
  @@map("friendships")
  @@index([userId])
  @@index([friendId])
  @@index([status])
}

model Message {
  id            Int       @id @default(autoincrement())
  senderId      Int
  receiverId    Int
  content       String
  read          Boolean   @default(false)
  createdAt     DateTime  @default(now())

  // Relations
  sender        User      @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  receiver      User      @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: Cascade)

  @@map("messages")
  @@index([senderId])
  @@index([receiverId])
  @@index([createdAt])
}

model Photo {
  id            Int       @id @default(autoincrement())
  userId        Int
  url           String
  caption       String?
  createdAt     DateTime  @default(now())

  // Relations
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  photoTags     PhotoTag[]
  likes         Like[]
  comments      Comment[]

  @@map("photos")
  @@index([userId])
}

model PhotoTag {
  id        Int      @id @default(autoincrement())
  photoId   Int
  userId    Int
  x         Float?
  y         Float?
  createdAt DateTime @default(now())

  photo     Photo    @relation(fields: [photoId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([photoId, userId])
  @@map("photo_tags")
}

model Page {
  id            Int            @id @default(autoincrement())
  name          String
  description   String?
  category      String?
  image         String?
  creatorId     Int
  createdAt     DateTime       @default(now())

  creator       User           @relation("PageCreator", fields: [creatorId], references: [id])
  followers     PageFollower[]
  posts         PagePost[]

  @@map("pages")
}

model PageFollower {
  id        Int      @id @default(autoincrement())
  pageId    Int
  userId    Int
  createdAt DateTime @default(now())

  page      Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([pageId, userId])
  @@map("page_followers")
}

model PagePost {
  id        Int      @id @default(autoincrement())
  pageId    Int
  content   String
  image     String?
  videoUrl  String?
  createdAt DateTime @default(now())

  page      Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)

  @@map("page_posts")
}

model Notification {
  id            Int       @id @default(autoincrement())
  userId        Int
  type          String    // comment, friendship, message, tag, like, page_invite
  content       String
  read          Boolean   @default(false)
  relatedId     Int?      
  relatedUserId Int?      
  createdAt     DateTime  @default(now())

  // Relations
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
  @@index([userId])
  @@index([read])
  @@index([createdAt])
}

model Like {
  id        Int      @id @default(autoincrement())
  userId    Int
  postId    Int?
  photoId   Int?
  commentId Int?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  post      Post?    @relation(fields: [postId], references: [id], onDelete: Cascade)
  photo     Photo?   @relation(fields: [photoId], references: [id], onDelete: Cascade)
  comment   Comment? @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@unique([userId, photoId])
  @@unique([userId, commentId])
  @@map("likes")
}
